<div class="bg-gradient">
  <div class="run-image">
    <%# <%= render 'runs/show_carousel' %> %>
  </div>
  <div class="container-fluid vh-100 pt-3" style="
    /* background-image: linear-gradient(#0096C7, #FFFFFF); */
    background-image: linear-gradient(#0096C7 -20%, #FFFFFF 30%);">
    <div class="d-flex justify-content-between mx-3 card-date-time">
      <div class="d-flex flex-column run-date">
        <div class="day">
          <h1 class="display-4"><%= @run.date.strftime('%A') %></h1>
        </div>
        <h1 class="display-4"><%= @run.date.strftime("%b %e , %Y") %></h1>
      </div>
      <div class="time"><b>
          <h1 class="display-1"><%= @run.start_time.strftime('%H:%M') %></h1>
        </b></div>
    </div>
    <div class="d-flex flex-column align-items-start text-primary p-3 card-location-info">
      <h1 class="border-bottom w-100"><strong><%= @run.location.name %></strong></h1>
      <p><%= @run.location.description %></p>
    </div>
    <div class="d-flex flex-column position-relative align-items-start pt-4 px-3 mt-5 h-50 text-primary card-weather">
      <div class="position-absolute top-0 start-100 translate-middle">
        <h1 class="display-2"><span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary"><i class="fa-solid fa-temperature-high"></i> 12Â°<span></h1>
          </div>
          <h1 class="border-bottom w-100">Weather Forecast</h1>
          <p><%= @run.weather_description.capitalize %></p>
          <div class="d-flex flex-column weather-details">
            <div><i class="fa-sharp fa-solid fa-droplet-percent"></i>HUMIDITY <%= @run.humidity %></div>
            <div><i class="fa-solid fa-wind"></i>  WIND <%= @run.wind %></div>
            <div><i class="fa-solid fa-sun"></i>  WEATHER <%= @run.weather_description %></div>
            <div><i class="fa-light fa-braille"></i>  AIR QUALITY</div>
            <div><i class="fa-solid fa-cloud-snow"></i>  PRECIPITATION <%= @run.precipitation %></div>
          </div>
        </div>
        <div class="d-flex justify-content-around my-5">
          <%= link_to 'SUGGESTIONS',suggestions_path(@runs), class: 'btn rounded-4 btn-primary btn-sm' %>
          <%= link_to 'MODIFY',run_path(params[:id]), class: 'btn rounded-4 btn-primary btn-sm' %>
          <%= link_to 'ADD TO CALENDAR',suggestions_path(@runs), class: 'btn rounded-4 btn-warning text-white btn-sm' %></div>
      </div>
    </div>
