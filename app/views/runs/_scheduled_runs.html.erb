<div class="row">
  <div class="col">
    <div class="scheduledruns-div">
      <h1><strong>Coming Up</strong></h1>
      <% runs.each do |run| %>
        <div class="each-scheduled-runs-div d-flex align-items-center">
          <i class="fas fa-circle dot-circle me-2"></i>
          <div class="info-div mb-3 p-2 d-flex justify-content-between flex-grow-1">
            <div class="date-div">
              <% day = run.start_time.day %>
              <% suffix = case day%>
              <% when 1, 21, 31 then 'st'%>
              <% when 2, 22 then 'nd'%>
              <% when 3, 23 then 'rd'%>
            <% else 'th' %>
            <%end%>
            <%formatted_date = run.start_time.strftime("%B #{day}#{suffix}")%>
            <p><%= formatted_date %></p>
            <p><%= run.start_time.strftime("%A") %></p>
          </div>
          <div class="timeandplacediv">
            <p><i class="far fa-clock me-2"></i><%= run.start_time.strftime("%H:%M") %></p>
            <p><i class="fas fa-map-marker-alt me-2"></i><%= run.location.name %></p>
          </div>
          <div class="iconandtemp">
            <span class="weather-icon"><i class="far fa-sun"></i></span>
            <p><%= run.temperature %><span>&#176;</span>C</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
