<div class="d-flex flex-column justify-content-center min-vh-100 login-container">
  <%= image_tag "TRB white.png" %>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", placeholder: 'Email', class: 'rounded-input' } %>
      <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", placeholder: 'Password', class: 'rounded-input' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="d-flex justify-content-center form-actions">
      <%= f.button :submit, "Log in",
                class: 'btn rounded-4 btn-warning text-white px-5' %>
    </div>
  <% end %>
  <hr>
  <div class='text-white' style="font-size: 13px;">New to Tokyo Run Buddy? <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-decoration-none'  %><br />
    <div class='text-white'>Let's make a new one if you <%= link_to "forgot your password?", new_password_path(resource_name),  class: 'text-decoration-none' %><br />
    </div>
  </div>
</div>
