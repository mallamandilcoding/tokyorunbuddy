<div class="d-flex flex-column justify-content-center min-vh-100 login-container">
  <%= image_tag "TRB white.png" %>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", placeholder: 'Email', class: 'rounded-input' } %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Send me reset password instructions", class: 'btn rounded-4 btn-warning text-white px-5' %>
    </div>
  <% end %>
  <hr>
  <hr>
  <div class='text-white' style="font-size: 13px;">Already have an account? <%= link_to "Log in", new_session_path(resource_name),  class: 'text-decoration-none' %><br />
  </div>
  <div class='text-white' style="font-size: 13px;">New to Tokyo Run Buddy? <%= link_to "Sign up", new_registration_path(resource_name), class: 'text-decoration-none'  %><br />
  </div>
</div>
