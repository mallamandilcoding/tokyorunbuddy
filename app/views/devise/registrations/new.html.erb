<div class="d-flex flex-column justify-content-center min-vh-100 login-container">
  <%= image_tag "TRB white.png" %>
  <hr>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", placeholder: 'Email', class: 'rounded-input' }%>
      <%= f.input :password,
                required: true,
                label: false,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: 'New Password', class: 'rounded-input' } %>
      <%= f.input :password_confirmation,
                required: true,
                label: false,
                input_html: { autocomplete: "new-password", placeholder: 'New Password', class: 'rounded-input' } %>
    </div>
    <div class="d-flex justify-content-center form-actions">
      <%= f.button :submit, "Sign up", class: 'btn rounded-4 btn-warning text-white px-5' %>
    </div>
  <% end %>
  <hr>
  <div class='text-white' style="font-size: 13px;">Already have an account? <%= link_to "Log in", new_session_path(resource_name),  class: 'text-decoration-none' %><br />
  </div>
</div>
